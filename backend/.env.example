# Configurações do Servidor
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=seu_jwt_secret_aqui
JWT_EXPIRATION=24h

# MongoDB
MONGODB_URI=mongodb://localhost:27017/seu_banco

# CORS
CORS_ORIGIN=http://localhost:19006

# Logging
LOG_LEVEL=info

# Diretórios de Saída
PDF_OUTPUT_DIR=./storage/pdfs
IMAGE_OUTPUT_DIR=./storage/images

# Servidor de Avatares
AVATAR_SERVER_URL=http://seu-servidor-frontend:8081

# Avatar Padrão
DEFAULT_AVATAR_PATH=/assets/default-avatar.png

# OpenAI
OPENAI_API_KEY=sua_chave_api_aqui

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_aqui