# Configurações do servidor
PORT=3000
NODE_ENV=development

# Configurações do MongoDB
MONGODB_URI=mongodb://localhost:27017/kbc2

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Configurações da OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=
OPENAI_IMAGE_SIZE=1024x1024
OPENAI_IMAGE_QUALITY=standard
OPENAI_IMAGE_STYLE=natural

# Configurações de upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
MAX_IMAGE_SIZE_MB=2

# Configurações de diretórios
PDF_OUTPUT_DIR=./storage/pdfs
IMAGE_OUTPUT_DIR=./storage/images

# Configurações de CORS
CORS_ORIGIN=*

# Configurações de log
LOG_LEVEL=info

# Configurações de timeout
DOWNLOAD_TIMEOUT=60000
OPENAI_TIMEOUT=120000
MAX_DOWNLOAD_RETRIES=5

# Configurações do servidor de avatares
AVATAR_SERVER_URL=http://localhost:3000

# Configuração para pular validação da chave OpenAI (apenas para desenvolvimento)
SKIP_OPENAI_KEY_VALIDATION=false